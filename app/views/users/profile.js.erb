$('.advertisements').append(' <%= escape_javascript(render partial: "advertisements/adspartial", locals: {advertisements: @advertisements}) %>')
$('a.load-more-advertisements').attr('href', '/usuarios/<%= @user.to_param %>?page=<%= @advertisements.next_page %>');

<%unless @advertisements.next_page %>
$('a.load-more-advertisements').remove();
$('.remove').remove;
<% end %>
