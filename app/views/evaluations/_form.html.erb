<div class="panel panel-default col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" id="evaluation-form">
  <div class="panel-body">
    <%= simple_form_for(@evaluation) do |f| %>
    <%= f.error_notification %>
    <% if @evaluation.comment.present? %>
    <button class="close" data-dismiss="modal" type="button">&times;</button>
    <% end %>
    <div class="text-center">
      <h4 class="title-color">
        <% if @evaluation.comment.present? %>
          <strong>Editar minha qualificação</strong>
        <% else %>
          <strong>Qualificar este anunciante</strong>
        <% end %>
      </h4>
      <div class='starrr' id='star'></div>
      <% if @evaluation.comment.present? %>
      <div class="hidden-xs hidden-sm hidden-md hidden-lg hidden-xl">
        <%= f.text_field :star, value: @evaluation.star, :id =>'star_input' %>
      </div>
      <% else %>
      <div class="hidden-xs hidden-sm hidden-md hidden-lg hidden-xl">
        <%= f.text_field :star, value: 1, :id =>'star_input' %>
      </div>
      <% end %>
    </div>
    <div class="form-group input-group comment-margin">
      <label class="input-group-addon title-color" for="comment">
        <i class="fa fa-comment fa-2x"></i>
      </label>
      <%= f.text_area :comment, :placeholder => 'Deixe seu comentário sobre este anúnciante', class: 'form-control' %>
    </div>
    <div class="form-group hidden-xs hidden-sm hidden-md hidden-lg hidden-xl">
      <%= f.text_field :rated_id, value: @user.rated.id, :readonly => 'true' %>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">
        <i class="fa fa-save"></i>
        Salvar qualificação</button>
    </div>
    <% end %>
  </div>
</div>
