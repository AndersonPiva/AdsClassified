<div class="panel panel-default col-xs-12 col-sm-personal col-md-personal pull-right margin-post" id="new-advertesiment">
  <div class="panel-body">
    <%= image_tag @user.image, :id => 'user-image-timeline', class: 'pull-left' %>
    <div class="col-xs-10 col-sm-9 col-md-10">
      <%= simple_form_for(@advertisement, :html => {multipart: true}) do |f| %>
      <%= f.error_notification %>
      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-xs-12">
            <%= f.text_field :title, :placeholder => 'O que você está anunciando?', class: 'form-control'  %>
          </div>
        </div>
        <div class="none">
          <div class="form-group">
            <div class="col-xs-6">
              <%= f.number_field :price, :placeholder => 'Adicione um valor (R$)', class: 'form-control', min: '1', step: '0.25' %>
            </div>
            <div class="col-xs-6">
              <%= f.select(:negotiable, options_for_select([["Preço Negociável"]]), {:include_blank => 'Tipo de preço (opcional)'}, {class: "form-control"}) %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.select(:kind, options_for_select([["Artigo Novo"], ["Artigo Usador"]]), {}, {class: 'form-control'}) %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
                <%= f.text_area :description, :placeholder => 'Descrição do seu anúncio (opcional)', class: 'form-control', :id => 'message-area' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <%= link_to_add_association '', f, :images, title: 'Adicionar Imagens' , class: "btn btn btn-danger pull-left fa fa-camera" %>
              <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-check-square-o"></i> Postar</button>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
