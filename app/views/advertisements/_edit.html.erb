<div class="panel panel-default col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="panel-body">
    <button class="close" data-dismiss="modal" type="button">&times;</button>
    <div class="col-xs-12">
      <div class="text-center">
        <h4 class="title-color no-margin-no-padding" id="title-editads">
          <strong>Editar Anúncio</strong>
        </h4>
      </div>
    </div>
    <div>
      <%= image_tag @advertisement.user.image, :id => 'user-image-timeline', class: 'pull-left' %>
      <div class="col-xs-9 col-md-10">
        <%= simple_form_for(@advertisement, :html => {multipart: true}) do |f| %>
        <%= f.error_notification %>
        <div class="form-horizontal">
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.text_field :title, :placeholder => 'O que você está anunciando?', class: 'form-control'  %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-6">
              <%= f.number_field :price, :placeholder => 'Adicione um valor (R$)', class: 'form-control', min: '1', step: '0.25' %>
            </div>
            <div class="col-xs-6">
              <%= f.select(:negotiable, options_for_select([["Preço Negociável"]]), {:include_blank => 'Tipo de preço (opcional)'}, {class: "form-control"}) %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.text_area :description, :placeholder => 'Descrição do seu anúncio (opcional)', class: 'form-control', :id => 'message-area' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.simple_fields_for :images do |image| %>
            <%= render "image_fields", :f => image, :advertisement => @advertisement %>
            <% end %>
          </div>
          <div class=" form-group">
            <div class="col-xs-12">
              <%= link_to_add_association '', f, :images, title: 'Adicionar Imagens' , class: "btn btn-danger pull-left fa fa-camera" %>
              <button class="btn btn-primary pull-right" type="submit">
                <i class="fa fa-check-square-o"></i>Atualizar postagem</button>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
